<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- TabLayout 没有提供修改 TextView size 的方法，可以新建一个 -->
    <style name="TabLayoutTextAppearance"  parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse" >
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="line_e3e9e9">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#e3e9e9</item>
    </style>
</resources>
